@page "{id}"
@model EFCore_UseCase.Pages.Product.EditModel
@{

    ViewData["Title"] = "Edit Product";

}


<div class="text-center">
    <h1 class="display-8 text-left">Edit Product</h1>
    <hr />
    <form method="post">
        <input type="hidden" asp-for="EditProduct.Id" />
        <div class="form-group col-md-6">
            <input asp-for="EditProduct.Name" name="Name" class="form-control" placeholder="Name" />
        </div>
        <div class="form-group col-md-6">
            <input asp-for="EditProduct.UnitPrice" type="number" name="UnitPrice" class="form-control" placeholder="Price" />
        </div>
        <div class="form-group col-md-6">
            <select asp-items="@Model.Categories" asp-for="EditProduct.CategoryId" name="CategoryId" id="CategoryId" class="form-control">
                <option value="0">Select Product Category</option>
            </select>
        </div>

        <div class="form-group col-md-6">
            <input type="submit" value="Edit" class="btn btn-warning btn-block" />
        </div>

    </form>

</div>
