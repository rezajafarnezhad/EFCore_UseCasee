@page
@model EFCore_UseCase.Pages.Product.CreateModel
@{

    ViewData["Title"] = "Create Product";
    
}


<div class="text-center">
    <h1 class="display-8 text-left">Create Product</h1>
    <hr />
    <form method="post">
        <div class="form-group col-md-6">
            <input name="Name" class="form-control" placeholder="Name" />
        </div>
        <div class="form-group col-md-6">
            <input type="number" name="UnitPrice" class="form-control" placeholder="Price" />
        </div>
        <div class="form-group col-md-6">
            <select asp-items="@Model.Categories" name="CategoryId" id="CategoryId" class="form-control">
                <option value="0">Select Product Category</option>
            </select>
        </div>
       
        <div class="form-group col-md-6">
            <input type="submit" value="Save" class="btn btn-success btn-block" />
        </div>

    </form>
    
</div>
